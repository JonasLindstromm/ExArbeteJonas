@model ExArbeteJonas.ViewModels.UserViewModel

<h2 class="red-two">Är du säker på att du vill ta bort @Model.AnvandarNamn ?</h2>
<h2 class="ice-two">Annonser som lagts in av @Model.AnvandarNamn kommer också tas bort</h2>
<br />
<div class="container">
    <div class="row col-md-4 col-md-offset-4">
        <div class="col">
            <form asp-controller="Account" asp-action="Delete" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group" align="center">
                    <input type="submit" value="Ta bort @Model.AnvandarNamn" class="btn btn-danger" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
