@model ExArbeteJonas.ViewModels.UserViewModel

@if (Model.RoleName == "Member")
{
    <h2 class="red-two">Är du säker på att du vill ta bort medlemmen @Model.UserName ?</h2>
    <h3 class="red-three">Alla annonser som lagts in av @Model.UserName kommer också att tas bort</h3>
}
else
{
    <h2 class="red-two">Är du säker på att du vill ta bort administratören @Model.UserName ?</h2>
}
<br />
<div class="container">
    <div class="row col-md-4 col-md-offset-4">
        <div class="col">
            <form asp-controller="Account" asp-action="Delete" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group" align="center">
                    <input type="submit" value="Ta bort @Model.UserName" class="btn btn-danger" />                   
                </div>
            </form>
        </div>
    </div>
    <div class="row col-md-4 col-md-offset-4">
        <div class="col">
            <form asp-controller="Home" asp-action="IndexAds">
                <div class="form-group" align="center">                   
                    <input type="submit" value="Avbryt" class="btn btn-info"/>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
