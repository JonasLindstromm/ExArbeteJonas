@model ExArbeteJonas.Models.EquipmentType

<h2 class="ice-two">Lägg till ny Utrustningstyp</h2>

<div class="container">
    <div class="row col-md-4 col-md-offset-4">
        <div class="col">
            <form asp-controller="Home" asp-action="CreateEquipmentType" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <br />
                <br />
                <div class="form-group" align="center">
                    <input type="submit" value="Lägg till ny Utrustningstyp" class="btn btn-info"/>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

