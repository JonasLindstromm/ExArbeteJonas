@model ExArbeteJonas.ViewModels.CreateAdvViewModel

<h2 class="ice-two">Lägg in ny annons, steg 1</h2>

<div class="container">
    <div class="row col-md-4 col-md-offset-4">
        <div class="col">
            <form asp-controller="Home" asp-action="CreateAdv" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CurrentAdv.AdvTypeId" class="control-label"></label>
                    <select asp-for="CurrentAdv.AdvTypeId" class="form-control" asp-items="@Model.AdvTypeNames"></select>
                </div>
                <div class="form-group">
                    <label asp-for="CurrentAdv.Title" class="control-label"></label>
                    <input asp-for="CurrentAdv.Title" class="form-control" />
                    <span asp-validation-for="CurrentAdv.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CurrentAdv.Description" class="control-label"></label>
                    <textarea asp-for="CurrentAdv.Description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="CurrentAdv.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CurrentAdv.Price" class="control-label"></label>
                    <input asp-for="CurrentAdv.Price" class="form-control" />
                    <span asp-validation-for="CurrentAdv.Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CurrentAdv.Place" class="control-label"></label>
                    <input asp-for="CurrentAdv.Place" class="form-control" />
                    <span asp-validation-for="CurrentAdv.Place" class="text-danger"></span>
                </div>
                <div class="form-group" align="center">
                    <input type="submit" value="Skapa Annonsen" class="btn btn-info" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


