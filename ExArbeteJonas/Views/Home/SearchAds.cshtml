@model ExArbeteJonas.ViewModels.SearchAdsViewModel

<h2 class="ice-two">Sök bland aktuella annonser</h2>

<div class="container">
    <div class="row col-md-4 col-md-offset-4">
        <div class="col">
            <form asp-controller="Home" asp-action="SearchAds" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="AdvTypeId" class="control-label"></label>
                    <select asp-for="AdvTypeId" class="form-control" asp-items="@Model.AdvTypeNames"></select>
                </div>
                <div class="form-group">
                    <label asp-for="EqTypeId" class="control-label"></label>
                    <select asp-for="EqTypeId" class="form-control" asp-items="@Model.EqTypeNames"></select>
                </div>
                <div class="form-group">
                    <label asp-for="SearchTitle" class="control-label"></label>
                    <input asp-for="SearchTitle" class="form-control" />
                    <span asp-validation-for="SearchTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SearchDescription" class="control-label"></label>
                    <input asp-for="SearchDescription" class="form-control" />
                    <span asp-validation-for="SearchDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SearchPlace" class="control-label"></label>
                    <input asp-for="SearchPlace" class="form-control" />
                    <span asp-validation-for="SearchPlace" class="text-danger"></span>
                </div>
                <div class="form-group" align="center">
                    <input type="submit" value="Sök annonser" class="btn btn-info" />
                </div>
            </form>
        </div>
    </div>
</div>
