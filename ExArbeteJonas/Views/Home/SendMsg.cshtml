@model ExArbeteJonas.ViewModels.SendEmailViewModel

<h2 class="red-two">@Model.AdvTypeName</h2>
<h2 class="ice-two">@Model.AdvTitle</h2>

    <h3 class="ice-three">Skicka Meddelande med E-post till annonsören: @Model.UserName</h3>

    <div class="container">
        <div class="row col-md-4 col-md-offset-4">
            <div class="col">
                <form asp-controller="Home" asp-action="SendMsg" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="AdvId" />
                    <div class="form-group">
                        <label asp-for="Subject" class="control-label"></label>
                        <input asp-for="Subject" class="form-control" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Message" class="control-label"></label>
                        <textarea asp-for="Message" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <div class="form-group" align="center">
                        <input type="submit" value="Skicka Meddelandet" class="btn btn-info" />
                    </div>
                </form>
            </div>
        </div>
    </div>


